#!/usr/bin/env bash
# Check if the script is being run with root privileges
if [ "$EUID" -ne 0 ]; then
  echo "Please run the script with root privileges (sudo)."
  exit 1
fi

# Function to listen on port 98
function listen_on_port_98() {
    echo "Listening on port 98..."
    nc -l -p 98
}

# Call the function to start listening
listen_on_port_98
