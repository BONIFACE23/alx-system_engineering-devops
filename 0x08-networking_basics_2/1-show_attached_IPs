#!/usr/bin/env bash


# Function to check if an IP is a valid IPv4 address
function is_ipv4() {
    local ip=$1
    if [[ $ip =~ ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$ ]]; then
        return 0
    else
        return 1
    fi
}

# Get the output of ifconfig and extract IPv4 addresses
ipv4_addresses=$(ifconfig | grep -oE 'inet (addr:)?([0-9]+\.[0-9]+\.[0-9]+\.[0-9]+)' | grep -oE '([0-9]+\.[0-9]+\.[0-9]+\.[0-9]+)')

# Display the active IPv4 addresses
echo "Active IPv4 addresses:"
echo "----------------------"
for ip in $ipv4_addresses; do
    if is_ipv4 "$ip"; then
        echo "$ip"
    fi
done
